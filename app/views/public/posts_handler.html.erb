<div class="center">
    <div class="row">
     <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%= raw image_tag post.image.url%>
              <div class="caption">
                <h3><%= link_to post.title, nested_post_path(post) %></h3>
                <p><%= raw post.content.truncate_words(20) %></p>
			        </div>
          </div>
        </div>
      <% end unless @posts.blank?%>
    </div>
</div>
